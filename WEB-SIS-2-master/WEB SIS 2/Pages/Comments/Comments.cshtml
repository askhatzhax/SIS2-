@page
@model WEB_SIS_2.Pages.Comments.CommentsModel
@{
    ViewData["Title"] = "Comments";
}
<h1>COMMENT</h1>
<div class="row">
   @foreach (var item in Model.Comments)
   {
       //путь к фотос
       var photoPath = $"/Users/{item.PhotoPath ?? "user.jpg" }";
       <div class="col-lg-4">
           <div class="card-deck bg-warning">
               <div class="card m-3 ">

                   <div class="card-header">
                       <h4 class="card-title">@item.Name</h4>

                   </div>
                   <div class="text-center carBodyStyle">
                       <img class="card-img-top" src="@photoPath" asp-append-version="true " />

                   </div>
                   <div class="text-left">
                       <p class="card-text"> Date of sales : @item.Date </p>
                   </div>
                   <div class="card-footer text center">
                       <a href="#" class="btn btn-success m-1"> view </a>
                       <a href="#" class="btn btn-primary m-1 "> Edit</a>
                       <a href="#" class="btn btn-danger m-1 "> Delete </a>

                   </div>
               </div>
            </div>

       </div>
   }
</div>