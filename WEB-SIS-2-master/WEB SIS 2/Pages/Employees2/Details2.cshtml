@page
@model WEB_SIS_2.Pages.Employees2.Details2Model
@{
    ViewData["Title"] = "Deatils2";
    var photoPath = $"/images2/{Model.Employee.PhotoPath ?? "10.jpg"}";
        }
<div class="row justify-content-center m-3 destination-box">
    <div class="col col-lg-8">
        <div class="card">
            <div class="card-header text-center card-color">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <div class="row">
                    <div class="col card-color">
                        <h3 class="cardTextLeftFloating">Price: @Model.Employee.Price ₽</h3>
                        <h3 class="cardTextLeftFloating">Discount: @Model.Employee.Discount</h3>
                        <h3 class="cardTextLeftFloating">Genre: @Model.Employee.Genre</h3>
                    </div>

                    <div class="col col-lg-3">
                        <div style="border-right: 1px solid rgba(0,0,0,.1)">
                            <img class="card-img-top border border-primary image-card" style="background-color:white" src="@photoPath" asp-append-version="true" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color: white;">
                            <a asp-page="Employees2" class="btn btn-success ">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
